<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
	<Dialog id="anwesenheitdialog" title="Anwesenheitsliste" stretch="false" draggable="true" resizable="true" class="sapUiSmallMargin">
		<content>
				<ScrollContainer height="100%" horizontal="true" vertical="true" class="sapUiSmallMargin">
					<List id="arzteliste" items="{/aerzte}" mode="MultiSelect" selectionChange="onSelectionChange">
						<StandardListItem title="{vorname} {nachname}"
			description="{fachgebiet}"></StandardListItem>
					</List>
				</ScrollContainer>
		</content>
		<beginButton>
			<Button text="Ohne Anwesenheitsliste fortfahren" press="onOhneListe" type="Default"/>
		</beginButton>
		<endButton>
			<Button id="anwSave" icon="sap-icon://save" press="onSpeichern" type="Accept" visible="false"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>