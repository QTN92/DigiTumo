<View controllerName="DigiTumo.controller.Login" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" height="100%">
	<Shell>
		<Page title="Login - Digital Tumorboard">
			<content>
				<FlexBox justifyContent="Center" alignItems="Center">
					<l:VerticalLayout class="sapUiContentPadding" width="100%">
						<l:content>
							<Label text="User"/>
							<Input id="user" change="onUserInputChange" class="sapUiSmallMarginBottom"/>
							<Label text="Passwort"/>
							<Input id="passwort" type="Password" change="onPwInputChange" class="sapUiSmallMarginBottom"/>
							<Button id="loginb" text="Login" press="onLogin" width="100%" type="Emphasized"/>
							<!--Testbutton um Patientenview anzuzeigen-->
							<Button id="Patienten" text="Patienten" press="onPatienten" width="100%"/>
							<Button id="Admin" text="Admin" press="onAdmin" width="100%"/>
							<Button id="Newspflege" text="Newspflege" press="onNewspflege" width="100%"/>
						</l:content>
					</l:VerticalLayout>
				</FlexBox>
			</content>
		</Page>
	</Shell>
</View>