<mvc:View controllerName="DigiTumo.controller.Login" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" height="100%">
	<Page title="LogIn - Digital Tumorboard">
		<content>
			<FlexBox justifyContent="Center">
				<l:VerticalLayout class="sapUiContentPadding" width="100%">
					<l:content>
						<Label text="User"/>
						<Input id="user" class="sapUiSmallMarginBottom"></Input>
						<Label text="Passwort"/>
						<Input id="passwort" type="Password" class="sapUiSmallMarginBottom"></Input>
						<Button id="loginb" text="Login" press="onLogin"/>
					</l:content>
				</l:VerticalLayout>
			</FlexBox>
		</content>
	</Page>
</mvc:View>