<View id="adminscreen" controllerName="DigiTumo.controller.Admin" xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout" xmlns:u="sap.ui.unified" height="100%">
	<Shell>
		<Page responsive="true" title="Benutzerverwaltung" showHeader="true" enableScrolling="true" enableBusyIndicator="true"
			mode="SingleSelectMaster">
			<content>
				<!-- Benutzerliste -->
				<Table id="BenutzerTab" selectionChange="selectionChange" updateFinished="updateFinished" items="{/TimeRecTabSet}">
					<headerToolbar>
						<OverflowToolbar id="otbSubheader">
							<Title text="Benutzer"/>
							<ToolbarSpacer/>
							<Button id="addBenutzer" icon="sap-icon://add" type="Accept" press="onAddBen"/>
						</OverflowToolbar>
					</headerToolbar>
					<columns>
						<Column visible="false">
							<Text text="TaskGuid"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Left">
							<Text text="Vorname"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Left">
							<Text text="Nachname"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Left">
							<Text text="Benutzername"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Left">
							<Text text="Passwort"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Left">
							<Text text="Berechtigungsstatus"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Left">
							<Text text="Aktion"/>
						</Column>
					</columns>
					<items>
						<ColumnListItem>
							<cells>
								<Input id="Vorname" text="{TaskGuid}"/>
								<Input id="Nachname" text="{TrecStatus}"/>
								<Input id="Benutzerkennung" text="{TaskText}" design="Bold"/>
								<Input id="Passwort" text="{ProjectText}"/>
								<Input id="Berechtigungsstatus" text="{RoleText}"/>
								<Input id="ErfZeit" value="{TrecHours}" type="Number" change="onChange" width="50%"/>
								<Button id="DeleteBenutzer" press="onDeleteBen" icon="sap-icon://delete"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</content>
			<footer>
				<OverflowToolbar>
					<ToolbarSpacer/>
					<Button id="save" press="onSave" icon="sap-icon://save" type="Accept"/>
					<Button id="cancel" press="onCancel" icon="sap-icon://cancel" type="Reject"/>
					<Button id="logout" text="Logout" press="onLogout" icon="sap-icon://log" type="Default"/>
				</OverflowToolbar>
			</footer>
		</Page>
	</Shell>
</View>