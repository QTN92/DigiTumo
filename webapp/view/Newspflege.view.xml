<View id="newspflege" controllerName="DigiTumo.controller.Newspflege" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout"
	xmlns:u="sap.ui.unified" height="100%">
	<Shell>
		<Page responsive="true" title="Studienverwaltung" showHeader="true" enableScrolling="true" enableBusyIndicator="true"
			mode="SingleSelectMaster">
			<content>
				<!-- Studienliste -->
				<Table id="StudienTab" selectionChange="selectionChange" updateFinished="updateFinished" items="{/news}">
					<headerToolbar>
						<OverflowToolbar id="otbSubheader">
							<Title text="Studien"/>
							<ToolbarSpacer/>
							<Button id="addStudie" icon="sap-icon://add" type="Accept" press="onAddStudie"/>
						</OverflowToolbar>
					</headerToolbar>
					<columns>
						<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Left">
							<Text text="Vorname"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Left">
							<Text text="Nachname"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Left">
							<Text text="Titel"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Left">
							<Text text="Jahr"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Left">
							<Text text="Medium"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Left">
							<Text text="Abstract"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Left">
							<Text text="Verweis"/>
						</Column>
					</columns>
					<items>
						<ColumnListItem>
							<cells>
								<Input id="Vorname" value="{autorVorname}"/>
								<Input id="Nachname" value="{autorNachname}"/>
								<Input id="Titel" value="{titel}"/>
								<Input id="Jahr" value="{jahr}"/>
								<Input id="Medium" value="{medium}"/>
								<Input id="Abstract" value="{abstract}"/>
								<Input id="Verweis" value="{verweis}"/>
								<Button id="DeleteStudie" press="onDeleteStudie" icon="sap-icon://delete"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</content>
			<footer>
				<OverflowToolbar>
					<ToolbarSpacer/>
					<Button id="save" press="onSave" icon="sap-icon://save" type="Accept"/>
					<Button id="cancel" press="onCancel" icon="sap-icon://cancel" type="Reject"/>
					<Button id="logout" text="Logout" press="onLogout" icon="sap-icon://log" type="Default"/>
				</OverflowToolbar>
			</footer>
		</Page>
	</Shell>
</View>