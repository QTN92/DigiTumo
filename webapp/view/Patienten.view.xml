<View id="patientenscreen" controllerName="DigiTumo.controller.Patienten" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout"
	xmlns:u="sap.ui.unified" height="100%">
	<Shell>
		<Page title="Patienten">
			<content>
				<List items="{/patienten}" headerText="Patienten" id="patientenliste">
					<items>
						<ObjectListItem title="{patientenid} {vorname} {nachname}" type="Active" press="onListItemPress">
							<attributes>
								<ObjectAttribute text="{geburtsdatum}"/>
								<ObjectAttribute text="{tumor} {tumorstadium}"/>
							</attributes>
						</ObjectListItem>
					</items>
				</List>
				<Button id="Dashboard" text="Dashboard" press="onDashboard" width="100%"/>
			</content>
			<footer>
				<OverflowToolbar>
					<ToolbarSpacer/>
					<Button id="logout" text="Logout" press="onLogout" icon="sap-icon://log" type="Reject"/>
				</OverflowToolbar>
			</footer>
		</Page>
	</Shell>
</View>