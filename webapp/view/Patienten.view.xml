<View id="patientenscreen" controllerName="DigiTumo.controller.Patienten" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout"
	height="100%">
	<Shell>
		<Page title="Patientenliste" responsive="true">
			<content>
				<List items="{/Patienten}" headerText="Patienten" id="patientenliste"> 
					<items>
						<ObjectListItem title="{vorname} {nachname}" type="Active" press="onListItemPress" id="patient_name">
							<attributes>
								<ObjectAttribute text="{geburtsdatum}"/>
								<ObjectAttribute text="{tumor} {tumorstadium}"/>
							</attributes>
						</ObjectListItem>
					</items> 
				</List>
				<Button id="dashboard_anzeigen" text="Dashboard anzeigen" press="onPress"/>
			</content>
			<footer>
				<OverflowToolbar>
					<ToolbarSpacer/>
					<Button id="logout" press="onLogout" icon="sap-icon://log" type="Reject"/>
				</OverflowToolbar>
			</footer>
		</Page>
	</Shell>
</View>