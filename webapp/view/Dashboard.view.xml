<View controllerName="DigiTumo.controller.Dashboard" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" height="100%">
	<Shell>
		<Page title="Dashboard" showNavButton="true" navButtonPress="onBack" showHeader="true">
			<l:Grid width="160%">
				<l:content>
					<Panel headerText="Datenblatt" width="100%" class="sapUiResponsiveMargin">
						<content>
							<List items="{/datenblatt}">
								<items>
									<StandardListItem title="Tumor" info="{vorname} {nachname}"/>
								</items>
							</List>
							<List items="{/datenblatt}">
								<items>
									<StandardListItem title="Krankenkasse" info="{krankenkasse}"/>
								</items>
							</List>
							<List items="{/datenblatt}">
								<items>
									<StandardListItem title="Geburtstag" info="{geburtstag}"/>
								</items>
							</List>
							<List items="{/datenblatt}">
								<items>
									<StandardListItem title="Tumor" info="{tumor} {tumorstadium}"/>
								</items>
							</List>
							<List items="{/datenblatt}">
								<items>
									<StandardListItem title="Datum der Diagnose" info="{diagnosedatum}"/>
								</items>
							</List>
							<List items="{/datenblatt}">
								<items>
									<StandardListItem title="Raucher" info="{raucher}"/>
								</items>
							</List>
							<List items="{/datenblatt}">
								<items>
									<StandardListItem title="Weitere Krankheiten" info="{weitere_krankheiten}"/>
								</items>
							</List>
						</content>
					</Panel>
					<Panel headerText="Ultraschall" class="sapUiResponsiveMargin">
						<Image src="http://edoc.hu-berlin.de/dissertationen/chopra-sascha-santosh-2005-03-18/HTML/image015.jpg" densityAware="false" width="100%"/>
					</Panel>
					<GenericTile class="sapUiResponsiveMargin tileLayout " header="Gesundheitsscore" press="press">
						<tileContent>
							<TileContent>
								<content>
									<NumericContent icon="sap-icon://stethoscope" value="8" valueColor="Good"/>
								</content>
							</TileContent>
						</tileContent>
					</GenericTile>
				</l:content>
			</l:Grid>
			<footer>
				<OverflowToolbar>
					<ToolbarSpacer/>
					<Button id="vorgehen" text="Vorgehen festhalten" press="onSave" icon="sap-icon://request" type="Accept"/>
					<Button id="logout" press="onLogout" icon="sap-icon://log" type="Reject"/>
				</OverflowToolbar>
			</footer>
		</Page>
	</Shell>
</View>