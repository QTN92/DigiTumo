<View controllerName="DigiTumo.controller.Dashboard" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout"
	xmlns:viz="sap.viz.ui5.controls" xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds" xmlns:viz.data="sap.viz.ui5.data" height="100%">
	<Shell>
		<Page responsive="true" title="Dashboard" showNavButton="true" navButtonPress="onBack" showHeader="true" enableScrolling="true">
			<l:Grid width="100%" defaultSpan="L4 M6 S6">
				<l:content>
					<!-- Datenblatt -->
					<Panel headerText="Datenblatt" width="100%" class="sapUiSmallMargin">
						<content>
							<List items="{/datenblatt}">
								<items>
									<StandardListItem title="Name" info="{vorname} {nachname}"/>
								</items>
							</List>
							<List items="{/datenblatt}">
								<items>
									<StandardListItem title="Geburtsdatum" info="{geburtsdatum}"/>
								</items>
							</List>
							<List items="{/datenblatt}">
								<items>
									<StandardListItem title="Geschlecht" info="{geschlecht}"/>
								</items>
							</List>
							<List items="{/datenblatt}">
								<items>
									<StandardListItem title="Raucher" info="{raucher}"/>
								</items>
							</List>
							<List items="{/datenblatt}">
								<items>
									<StandardListItem title="Krankenkasse" info="{krankenkasse}"/>
								</items>
							</List>
							<List items="{/datenblatt}">
								<items>
									<StandardListItem title="Tumor" info="{tumor} {tumorstadium}"/>
								</items>
							</List>
							<List items="{/datenblatt}">
								<items>
									<StandardListItem title="Datum der Diagnose" info="{diagnosedatum}"/>
								</items>
							</List>

							<List items="{/datenblatt}">
								<items>
									<StandardListItem title="Weitere Krankheiten" info="{weitere_krankheiten}"/>
								</items>
							</List>
						</content>
					</Panel>
					<!-- Ultraschall -->
					<Panel headerText="Ultraschall" class="sapUiSmallMargin" width="100%">
						<Image src="http://www.newhealthadvisor.com/images/1HT17497/pancreatic%20cancer.jpg" densityAware="false" width="100%"/>
					</Panel>
					<!-- Gesundheitsscore -->
					<Panel headerText="Gesundheitsscore" class="sapUiSmallMargin" width="100%">
						<GenericTile header="Gesundheitsscore" press="press">
							<tileContent>
								<TileContent>
									<content>
										<NumericContent icon="sap-icon://stethoscope" id="score"/>
									</content>
								</TileContent>
							</tileContent>
						</GenericTile>
					</Panel>
					<!-- Studienfeed -->
					<Panel headerText="Studienergebnisse" class="sapUiSmallMargin" width="100%" height="100%">
						<content>
							<List items="{/news}">
								<items>
									<FeedListItem senderActive="false" text="{titel}" sender="{autor}" showIcon="false"/>
								</items>
							</List>
						</content>
					</Panel>
					<!--Krankheitsverlauf-->
					<viz:Popover id="idPopOver"></viz:Popover>
					<viz:VizFrame id="idVizFrame" uiConfig="{applicationSet:'fiori'}" height='100%' width="100%" vizType='combination'>
						<viz:dataset>
							<viz.data:FlattenedDataset data="{/milk}">
								<viz.data:dimensions>
									<viz.data:DimensionDefinition name="Week" value="{Week}"/>
								</viz.data:dimensions>
								<viz.data:measures>
									<viz.data:MeasureDefinition name="Revenue" value="{Revenue}"/>
									<viz.data:MeasureDefinition name="Cost" value="{Cost}"/>
									<viz.data:MeasureDefinition name="Cost2" value="{Cost2}"/>
									<viz.data:MeasureDefinition name="Cost1" value="{Cost1}"/>
								</viz.data:measures>
							</viz.data:FlattenedDataset>
						</viz:dataset>
						<viz:feeds>
							<viz.feeds:FeedItem uid="valueAxis" type="Measure" values="Revenue"/>
							<viz.feeds:FeedItem uid="valueAxis" type="Measure" values="Cost"/>
							<viz.feeds:FeedItem id="feedCategoryAxis" uid="categoryAxis" type="Dimension" values="Week"/>
						</viz:feeds>
					</viz:VizFrame>
				</l:content>
			</l:Grid>
			<!-- Footer mit Vorgehen festhalten + LogOut Buttons -->
			<footer>
				<OverflowToolbar>
					<ToolbarSpacer/>
					<Button id="vorgehen" text="Vorgehen festhalten" press="onSave" icon="sap-icon://request" type="Accept"/>
					<Button id="logout" press="onLogout" icon="sap-icon://log" type="Reject"/>
				</OverflowToolbar>
			</footer>
		</Page>
	</Shell>
</View>