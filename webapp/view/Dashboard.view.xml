				</l:content>
			</l:Grid>
			<!-- Footer mit Vorgehen festhalten + LogOut Buttons -->
			<footer>
				<OverflowToolbar>
					<Button id="studien" text="Zu den Studienergebnissen" press="onStudien" icon="sap-icon://electronic-medical-record" type="Emphasized"/>
					<ToolbarSpacer/>
					<Button id="vorgehen" text="Vorgehen festhalten" press="onSave" icon="sap-icon://request" type="Accept"/>
					<Button id="logout" text="Logout" press="onLogout" icon="sap-icon://log" type="Reject"/>
				</OverflowToolbar>
			</footer>
		</Page>
	</Shell>
